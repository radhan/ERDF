<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.erdf.AdminActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Panel Administrateur"
        android:id="@+id/tPanel"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/tPanel">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button"
                android:background="@drawable/rectanglebleu"
                android:layout_width="160dip"
                android:layout_height="120dip"
                android:layout_gravity="left"
                android:text="Gestion des chantiers"
                android:layout_row="1"
                android:textSize="12dp"
                android:textColor="#FFFFFF"
                android:layout_column="0" />

            <Button
                android:id="@+id/button2"
                android:background="@drawable/rectanglebleu"
                android:layout_width="160dip"
                android:layout_height="120dip"
                android:layout_gravity="right"
                android:text="Gestion des risques"
                android:textSize="12dp"
                android:textColor="#FFFFFF"
                android:layout_row="1"
                android:layout_column="1" />

            <Button
                android:id="@+id/button3"
                android:background="@drawable/rectanglebleu"
                android:layout_width="160dip"
                android:layout_height="120dip"
                android:layout_gravity="left"
                android:layout_row="2"
                android:text="Gestion des utilisateurs"
                android:textSize="12dp"
                android:textColor="#FFFFFF"
                android:layout_column="0"
                android:layout_marginTop="15dp"/>

            <Button
                android:id="@+id/button4"
                android:background="@drawable/rectanglebleu"
                android:layout_width="160dip"
                android:layout_height="120dip"
                android:layout_gravity="right"
                android:text="Deconnexion"
                android:textSize="12dp"
                android:textColor="#FFFFFF"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_marginTop="15dp"/>
        </GridLayout>
    </ScrollView>

</RelativeLayout>
