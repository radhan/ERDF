<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.erdf.FicheActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date/Heure : "
        android:id="@+id/tDate"
        android:layout_marginTop="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/sDate"
        android:layout_toRightOf="@id/tDate"
        android:layout_above="@+id/spinnerChantier"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Chantier : "
        android:id="@+id/tChantier"
        android:layout_below="@id/tDate"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/sChantier"
        android:visibility="gone"/>

    <Spinner
        android:id="@+id/spinnerChantier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tDate"
        android:layout_toRightOf="@+id/tChantier"
        android:layout_marginTop="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Adresse : "
        android:id="@+id/tAdresse"
        android:layout_below="@id/tChantier"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sAdresse"
        android:layout_below="@+id/tChantier"
        android:layout_alignRight="@+id/listView"
        android:layout_toRightOf="@+id/tAdresse" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/bAdresse"
        android:layout_below="@id/tChantier"
        android:layout_alignRight="@id/sAdresse"
        android:background="@drawable/ic_edit_black_48dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:id="@+id/listView"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tAdresse"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Envoyer"
        android:id="@+id/button"
        android:layout_marginTop="10dp"
        android:layout_below="@id/listView"
        android:layout_alignRight="@+id/listView"
        android:layout_alignEnd="@+id/listView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
